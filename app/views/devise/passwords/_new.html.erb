<div class="pass-wrapper">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :email, class: 'form-label' %>
    <div class="input-wrapper">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control stretch-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Reset Password", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
